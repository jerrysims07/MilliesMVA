include ../template/layout
include ../mixins/form-helper



block content
  .row
    .small-12.columns
      h2 Millie's Monster Village Adventure!!
  .row#gameArea
    .small-3.columns
      form#userInput(action='/new', method='post')
        fieldset
          .row
            .small-12.columns
              mixin field(7, 'name', 'Name', null, 'Name', true)
              mixin field(5, 'numberSpaces', 'Size', 6, null, false)
          .row
            .small-6.small-offset-3.columns
              button.radius.success.small.expand#start(type='submit') start game
            .small-3.columns
      fieldset
        #messageCenter Enter name and board size to get started
      fieldset#scoreArea
        .row Player:
        .row Score:
    .small-9.columns
      table#gameBoard

